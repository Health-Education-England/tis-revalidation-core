{
  "containerDefinitions": [
    {
      "name": "tis-revalidation-core",
      "image": "430723991443.dkr.ecr.eu-west-2.amazonaws.com/tis-revalidation-core:1",
      "portMappings": [
        {
          "containerPort": 8080
        }
      ],
      "environment": [
        {
          "name": "TITLE",
          "value": "tis-revalidation-core"
        },
        {
          "name": "AWS_REGION",
          "value": "eu-west-2"
        },
        {
          "name": "SENTRY_ENVIRONMENT",
          "value": "stage"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "awslogs-tis-revalidation-core",
          "awslogs-region": "eu-west-2",
          "awslogs-stream-prefix": "awslogs-tis-revalidation-core"
        }
      },
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/tis-template-db-host"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/tis-template-db-port"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/tis-template-db-user"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/tis-template-db-password"
        },
        {
          "name": "SENTRY_DSN",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/tis-revalidation-core-sentry-dsn"
        }
      ]
    }
  ],
  "executionRoleArn": "ecsTaskExecutionRole",
  "family": "tis-revalidation-core",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "1024"
}
